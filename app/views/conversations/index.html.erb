<%= render "layouts/header" %>

<div class="pageWrap responsive">
<% flash.each do |name, msg| -%>
  <% if !msg.blank? && name == 'sent' %>
  <div class="flashMessages">
      <%= content_tag :div, msg, class: name unless msg.blank? %>
  </div>
  <% end %>
<% end -%>
  <div class="messagesHeader">
    <div class="pageHeader">Messages</div>
    <% if @has_friends %>
      <div class="composeButton searchButton break-2-hide blue-bg-link"><%= link_to 'COMPOSE', new_message_path %></div>
      <div class="break-2-show"><a href="/messages/new"><div class="icon icon-icon-write-message-button"></div></a></div>
    <% end %>
  </div>

<div id="inboxWrapper">
  <%= render partial: 'conversations/inbox' %>
</div>






  <div class="footerMargin"></div>
</div>



<%= render "layouts/footer" %>
