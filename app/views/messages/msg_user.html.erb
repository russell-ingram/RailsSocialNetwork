
<%= render "layouts/header" %>
<div class="pageWrap responsive pageCreateMessage" data-js-init="createMessagePage">
  <div class="pageHeader">Create Message</div>
    <div class="newMessagesFormWrapper">

      <div class="newMsgForm formBox">

      <div class="newMsgFormHeader formHeader"></div>



    <%= form_tag messages_path, method: :post do %>
      <div class="newMsgFormGroup">

      <div class="messageReplySingle showMsgSingle">
        <div class="messageReplyTo">TO:</div>
        <div class="messageReplyRecip">
          <%= @recip.full_name %>
        </div>
      </div>
      <%= text_field_tag 'recipients_id',@recip.id, class: 'newMsgFormControlHidden' %>

      </div>

      <div class="newMsgFormGroup">
        <%= text_field_tag 'message[subject]', nil, placeholder: 'Subject', autocomplete: 'off',class: 'newMsgFormControl newMsgSubject', required: true %>
      </div>

      <div class="newMsgFormGroup">
        <div id="toolbar">
            <div class="editorButton ql-bold">B</div>
            <div class="editorButton ql-italic">I</div>
            <div class="editorButton ql-underline">U</div>
        </div>
        <div class="newMsgFormControl newMessageArea" id="editor">
          <!-- <div class="editorPlaceholder">Message:</div> -->
        </div>


        <%= text_area_tag 'message[body]', nil, cols: 3, class: 'newMsgFormControl newMessageArea', placeholder: 'Message:',id: "textAreaEditor", style: 'display:none;' %>
      </div>
      <input type='text' style="display:none;" >

      <div class="newMsgBtnSend">
        <span>
          <span>
              <input type="Submit" value="Send" class="blue-bg-link">
          </span>
        </span>
       </div>

    <% end %>





      </div>






    </div>




  <div class="footerMargin"></div>
</div>

<%= render "layouts/footer" %>
