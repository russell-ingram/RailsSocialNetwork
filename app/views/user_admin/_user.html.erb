<div class="myConnection">
  <div class="myConnWrapper">
    <div class="myConnProfilePic"><a href="/profile/<%= user.id %>">
    <% if user.profile_pic_url? %>
      <img src="<%= user.profile_pic_url %>">
    <% elsif user.linkedin_pic_url? %>
      <img src="<%= user.linkedin_pic_url %>">
    <% else %>
    <%= image_tag("avatar-icons/avatar_0"+rand(1..9).to_s+".svg")  %>
    <% end %>
    </a></div>

    <div class="myConnInfo">
      <div class="myConnName"><%= link_to user.full_name, user_profile_path(user) %></div>
      <% position = user.current_pos %>
      <div class="myConnCompany"><%= position["company"] %></div>
      <div class="myConnIndustry"><%= position["job_title"] %>, <%= position["industry"] %>, <%= position["enterprise_size"] %></div>
    </div>

    <div class="myConnMessage userActionsSidebar">
      <div class="userListAction"><%= link_to "review", admin_edit_user_path(user) %></div>
      <div class="userListAction deleteAction">
        <a href="#ex<%= user_counter %>" rel="modal:open">
            DELETE
        </a>
      </div>
      <div class="userListAction sendAction"><%= link_to "send message", message_user_path(user) %></div>
    </div>
  </div>
</div>

<%= render partial: 'static_pages/modal', locals: { name: :admin_users_page_s_confirm_delete, user: user, user_counter: user_counter }  %>
