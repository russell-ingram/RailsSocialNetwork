<div class="header">
  <div class="headerWrapper">
    <div class="logo"><a href="/home"><%= image_tag("fito-logo.svg", class: "menuLogo")  %></a></div>
    <div class="navBar">
    <% if current_user.admin %>
      <div class="hoverDiv"><a href="/admin">ADMIN</a></div>
    <% end %>
      <% if current_page?('/search') || controller.controller_name == "searchs" %>
      <div class="hoverDiv active"><a href="/search">SEARCH</a></div>
      <% else %>
      <div class="hoverDiv"><a href="/search">SEARCH</a></div>
      <% end %>
      <% if controller.controller_name == "friendships" %>
      <div class="hoverDiv active"><a href="/connections">CONNECTIONS</a></div>
      <% else %>
      <div class="hoverDiv"><a href="/connections">CONNECTIONS</a></div>
      <% end %>
      <% if current_user.friendship_requests > 0 %>
        <div class="notificationMenuIcon"><a href="/messages"><%= current_user.friendship_requests %></a></div>
      <% end %>
      <% if controller.controller_name == "conversations" %>
      <div class="hoverDiv mailMenuIcon active"><a href="/messages"><div class="icon icon-icon-mail menuIcon"></div></a></div>
      <% else %>
      <div class="hoverDiv mailMenuIcon"><a href="/messages"><div class="icon icon-icon-mail menuIcon"></div></a></div>
      <% end %>
      <% if current_user.unread_msgs > 0 %>
      <div class="notificationMenuIcon"><a href="/messages"><%= current_user.unread_msgs %></a></div>
      <% end %>
      <% if current_page?('/profile') %>
      <div class="hoverDiv active menuIconOptions"><div class="icon icon-icon-profile menuIcon"></div></div>
      <% else %>
      <div class="hoverDiv menuIconOptions"><div class="icon icon-icon-profile menuIcon"></div></div>
      <% end %>

    </div>
    <div class="logoutDrop">
      <div class="icon icon-icon-top-nubs-gray dropNub"></div>
      <div class="menuDropItem"><a href="/profile">MY PROFILE</a></div>
      <div class="menuDropItem"><a href="/logout">SIGN OUT</a></div>
      <div class="menuDropItem settingsDropItem">ACCOUNT SETTINGS</div>
      <div class="settingsDropWrapper">
        <div class="settingsDropDiv">
          <div class="settingsDropDivText">
            Receive an email when you receive a connection request
          </div>
          <div class="icon icon-selection-true dropDivIcon"></div>
        </div>
        <div class="settingsDropDiv">
          <div class="settingsDropDivText">
            Receive an email when you receive a new message
          </div>
          <div class="icon icon-selection-true dropDivIcon"></div>
        </div>
      </div>
    </div>

  </div>
</div>
