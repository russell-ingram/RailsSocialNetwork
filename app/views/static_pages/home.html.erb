<%= render "layouts/header" %>

<div class="pageWrap responsive pageHome" data-js-init="homePage">

  <% if current_user.sign_in_count < 2 %>
    <div class="welcomeHeader">Welcome to FITO!<br>Your account has been successfully created</div>
  <% end %>
<!-- start search bar -->
  <div class="searchBarHomeWrapper">

    <div class="searchBarHomeLabel">Find other technology leaders</div>
    <%= form_for @search, as: :search, method: :get do |f| %>
    <div class="searchBarHome">
      <div class="wrapper-dropdown" tabindex="1">
        <span class="ddLabel ddNoPref">Region</span>
        <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
        <ul class="dropdown">
          <li class="ddOption fieldOption">No preference</li>
          <% @regions.each do |region| %>
          <li class="ddOption fieldOption"><%= region %></li>
          <% end %>
        </ul>
      </div>
      <%= f.text_field :region, placeholder: 'Region', style: 'display: none;' %>
      <div class="wrapper-dropdown" tabindex="1">
        <span class="ddLabel ddNoPref">Industry</span>
        <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
        <ul class="dropdown">
          <li class="ddOption fieldOption">No preference</li>
          <% @industries.each do |industry| %>
          <li class="ddOption fieldOption bigOption"><%= industry %></li>
          <% end %>
        </ul>
      </div>
      <%= f.text_field :industry, placeholder: 'Industry', style: 'display: none;' %>
      <div class="homeAddIntentions">
        <a href="#addIntentionModal" rel="modal:open">
          <div class="addSpendingIntentionFieldButton">
            Spending Intentions
            <div class="icon icon-icon-add"></div>
          </div>
        </a>
      </div>
      <div class="searchButton fixIt break-1-hide blue-bg-link">search<i class="fa fa-chevron-right"></i></div>
    </div>
    <div class="searchBarHomeAdvancedOptions blue-link">
      Advanced Options <div class="icon icon-icon-add"></div>
    </div>

    <div class="formBoxRow homePageAdvancedRow">
      <div class="field field-col-4">
        <div class="wrapper-dropdown wrapperFieldDropdown" tabindex="1">
          <span class="ddLabel ddNoPref">
            Enterprise Size
          </span>
          <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
          <ul class="dropdown fieldDropdown">
            <li class="ddOption fieldOption">No preference</li>
            <li class="ddOption fieldOption">Small</li>
            <li class="ddOption fieldOption">Midsize</li>
            <li class="ddOption fieldOption">Large</li>
          </ul>
        </div>
        <%= f.text_field :enterprise, placeholder: 'Enterprise Size', style: 'display: none;' %>
      </div>
      <div class="field field-col-4">
        <div class="wrapper-dropdown wrapperFieldDropdown" tabindex="1">
