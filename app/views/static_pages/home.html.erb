<%= render "layouts/header" %>

<div class="pageWrap">

<!-- start search bar -->
  <div class="searchBarHomeWrapper">
    <div class="searchBarHomeLabel">Find other technology leaders</div>
    <%= form_for ([:search, @search]) do |f| %>
    <div class="searchBarHome">
      <div class="wrapper-dropdown" tabindex="1">
        <span class="ddLabel">Region</span>
        <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
        <ul class="dropdown">
            <% @regions.each do |region| %>
            <li class="ddOption fieldOption"><%= region %></li>
            <% end %>
        </ul>
      </div>
      <%= f.text_field :region, placeholder: 'Region', style: 'display: none;' %>
      <div class="wrapper-dropdown" tabindex="1">
        <span class="ddLabel">Industry</span>
        <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
        <ul class="dropdown">
            <% @industries.each do |industry| %>
            <li class="ddOption fieldOption"><%= industry %></li>
            <% end %>
        </ul>
      </div>
      <div class="homeAddIntentions">
        <a href="#addIntentionModal" rel="modal:open">
          <div class="addSpendingIntentionFieldButton">
            Spending Intentions
            <div class="icon icon-icon-add"></div>
          </div>
        </a>
      </div>
      <div class="searchButton fixIt">search<i class="fa fa-chevron-right"></i></div>
    </div>
    <div class="searchBarHomeAdvancedOptions">
      Advanced Options <div class="icon icon-icon-add"></div>
    </div>

    <div class="formBoxRow homePageAdvancedRow">
      <div class="field field-col-4">
        <div class="wrapper-dropdown wrapperFieldDropdown" tabindex="1">
          <span class="ddLabel">
            Enterprise Size
          </span>
          <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
          <ul class="dropdown fieldDropdown">
            <li class="ddOption fieldOption">LARGE</li>
            <li class="ddOption fieldOption">SMALL</li>
            <li class="ddOption fieldOption">MIDSIZE</li>
          </ul>
        </div>
        <%= f.text_field :enterprise, placeholder: 'Enterprise Size', style: 'display: none;' %>
      </div>
      <div class="field field-col-4">
        <div class="wrapper-dropdown wrapperFieldDropdown" tabindex="1">
          <span class="ddLabel">
              Job Title
          </span>
          <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
          <ul class="dropdown fieldDropdown">
            <li class="ddOption fieldOption">Chief Information Officer</li>
            <li class="ddOption fieldOption">Chief Executive Officer</li>

          </ul>
        </div>
        <%= f.text_field :job_title, placeholder: 'Job Title', style:'display: none;' %>
      </div>

      <div class="field field-col-4">
        <div class="wrapper-dropdown wrapperFieldDropdown" tabindex="1">
          <span class="ddLabel">
              Organization Type
          </span>
          <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
          <ul class="dropdown fieldDropdown">
            <li class="ddOption fieldOption">Public</li>
            <li class="ddOption fieldOption">Private</li>
          </ul>
        </div>
        <%= f.text_field :organization_type, placeholder: 'Organization Type',style: 'display:none;' %>
      </div>

      <div class="field field-col-4">
        <div class="wrapper-dropdown wrapperFieldDropdown" tabindex="1">
          <span class="ddLabel">
              Country
          </span>
          <span class="carrot"><div class="icon icon-drop-dwn-arrow"></div></span>
          <ul class="dropdown fieldDropdown">
            <% @countries.each do |country| %>
            <li class="ddOption fieldOption"><%= country %></li>
            <% end %>
          </ul>
        </div>
        <%= f.text_field :country, placeholder: 'Country',style: 'display:none;' %>
      </div>
    </div>

    <div class="spendingIntentions homePageIntentionsList" style="display:none;">
      <div class="spendingIntentionsHeader">SPENDING INTENTIONS</div>
      <div class="spendingIntentionsOptions">

      </div>
    </div>
    <%= f.text_field :results, placeholder: 'Results', style: 'display: none;', id: 'resultsField' %>


    <%= f.submit 'Submit', id: 'submitSearch', style: 'display:none;' %>

<% end %>

  </div>
<!-- end search bar -->

