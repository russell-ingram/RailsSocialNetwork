
<!-- connections -->

  <div class="homeConnectionsHeader">suggested connections</div>
  <div class="homeConnections">

  <% @recs.each_with_index do |rec, i| %>

    <div class="homeConnectionBox <%= 'box-' + i.to_s %>">

      <div class="homeConnectionPic <%= ['','','break-0-show break-1-hide break-2-show','break-2-show','break-1-show','break-1-show'][i] %>" style="background-image:url(<%= connection_img(rec) %>)">
        <a href="/profile/<%= rec.id %>">
          <img src="<%= connection_img(rec) %>">
        </a>
        <div class="icon icon-icon-left-nubsdark-gray arrow left"></div>
      </div>

      <% position = rec.current_pos %>

      <div class="homeConnectionProfile">
        <div class="hcpTitle"><%= position["job_title"] %></div>
        <div class="hcpDesc">
          <p><%= position["industry"] %></p>
          <p>in <%= position["region"]%></p>
          <p><%= position["enterprise_size"] %> Enterprise</p>
        </div>
        <div class="hcpMsg"><a href="/messages/new/<%= rec.id %>">message <div class="icon icon-fwd-arrow"></div></a></div>
        <div class="hcpConnect connectElem<%= i %>"><a href="#connect<%= i %>" rel="modal:open">connect <div class="icon icon-fwd-arrow"></div></a></div>
      </div>


      <div class="homeConnectionPic <%= ['hide','hide','break-1-show break-2-hide','break-2-hide','break-1-hide','break-1-hide'][i] %>" style="background-image:url(<%= connection_img(rec) %>)">
        <div class="icon icon-icon-left-nubsdark-gray arrow right"></div>
        <a href="/profile/<%= rec.id %>">
          <img src="<%= connection_img(rec) %>">
        </a>
      </div>

        <div id="connect<%= i %>" class="addIntentionModal confirmConnectModal" style="display:none;">
          <div class="formBox searchFormBox formBoxModal confirmModalBox connectConfirm">
            <div class="formHeader">CONFIRM CONNECT</div>
            <div class="modalBody">
              <div class="modalIntentions">
                <div class="myConnProfilePic">
                  <a href="/profile/<%= rec.id %>">
                    <% if rec.profile_pic_url? %>
                      <img src="<%= rec.profile_pic_url %>">
                    <% else %>
                      <%= image_tag("avatar-icons/avatar_0"+rand(1..9).to_s+".svg")  %>
                    <% end %>
                  </a>
                </div>
              </div>
              <div class="modalIntentionsRight">
                <div class="deleteUserModalInfo">
                  Are you sure you would like to connect with <%= rec.full_name %>?
                </div>
                <div class="field-area">
                  <textarea placeholder="You may include a message in your request" class='connectMessage'></textarea>
                </div>
                <div class="modalDoneButton confirmConnectButtonHome" data="<%= rec.id %>" data-index="<%= i %>">
                  <a href="#close-modal" rel="modal:close">
                  CONFIRM
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>


    </div>

  <% end %>

</div>

<!-- end connections -->
